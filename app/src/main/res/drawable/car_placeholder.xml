<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#EEEEEE" />  <!-- Fondo gris claro -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />  <!-- Borde gris -->
    <corners android:radius="4dp" />  <!-- Esquinas redondeadas -->

    <!-- Icono de coche centrado -->
    <layer-list>
        <item
            android:drawable="@drawable/ic_car_outline"
            android:gravity="center"
            android:width="48dp"
            android:height="48dp" />
    </layer-list>
</shape>